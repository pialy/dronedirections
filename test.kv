<CameraClick>:
    orientation: 'vertical'
    image: image
    Image:
        id: image
        size_hint: None, None
        size: 640, 480
        allow_stretch: True
        keep_ratio: False

    ToggleButton:
        text: 'Play'
        on_press: root.capture()
        size_hint_y: None
        height: '48dp'